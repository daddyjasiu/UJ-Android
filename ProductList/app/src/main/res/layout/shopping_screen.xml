<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingScreen">

    <ScrollView
        android:layout_width="391dp"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/carrotButton"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="Carrot" />

            <Button
                android:id="@+id/cucumberButton"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="Cucumber" />

            <Button
                android:id="@+id/watermelonButton"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="Watermelon" />

            <Button
                android:id="@+id/paprikaButton"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="Paprika" />

            <Button
                android:id="@+id/appleButton"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="Apple" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>