<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.edu.uj.ii.skwarczek.productlist">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="false"
        android:name=".utility.InitRealm"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProductList"
        android:allowBackup="false">
        <activity
            android:name=".activities.SignInActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ProductListActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activities.SettingsActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activities.ShoppingCartActivity"/>
        <activity android:name=".activities.OrdersActivity"/>
        <activity android:name=".activities.OrderDetailsActivity"/>
    </application>

</manifest>